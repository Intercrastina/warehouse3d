<%= error_messages_for @step %>

<%= form_for [@assembly, @step] do |f| %>
	<%= f.label :order, "Order" %>
	<%= f.text_field :order %>
	<%= f.label :description, "Description" %>
	<%= f.text_area :description %>
	
	<%= f.submit "Save" %>
	<%= link_to "No more steps, go to my beautiful assembly :)", assembly_path(@assembly) %>

<% end %>