	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>
	<%= f.label :description, "Description" %>
	<%= f.text_area :description %>
	
	<%= f.submit "Save" %>
	<%= link_to "Stop pieces, Create steps", new_assembly_step_path(@assembly) %>

<% end %>
